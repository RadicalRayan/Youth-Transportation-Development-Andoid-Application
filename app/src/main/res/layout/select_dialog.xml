<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <TextView
        android:text="@string/did_you_take_any_of_these_green_modes_of_transportation_to_from_school_today"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/textView6"
        android:paddingTop="20dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/table"
        android:stretchColumns="0, 1, 2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp">

            <ImageView
                android:layout_column="0"
                android:layout_height="80dp"
                android:layout_width="80dp"
                app:srcCompat="@drawable/bike"
                android:id="@+id/bike"/>

            <ImageView
                android:layout_column="1"
                android:layout_height="80dp"
                android:layout_width="80dp"
                app:srcCompat="@drawable/car"
                android:id="@+id/car"/>

            <ImageView
                android:layout_column="2"
                android:layout_height="80dp"
                android:layout_width="80dp"
                app:srcCompat="@drawable/walk"
                android:id="@+id/walk"/>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="bike"/>

            <TextView
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="carpool"/>

            <TextView
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="walk"/>
        </TableRow>


    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/table2"
        android:stretchColumns="0, 1"
        android:paddingBottom="25dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp">

            <ImageView
                android:layout_column="0"
                android:layout_height="80dp"
                android:layout_width="80dp"
                app:srcCompat="@drawable/bus"
                android:id="@+id/bus"/>

            <ImageView
                android:layout_column="1"
                android:layout_height="80dp"
                android:layout_width="80dp"
                app:srcCompat="@drawable/transport"
                android:id="@+id/transport"/>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="school bus"/>

            <TextView
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="public transport"/>
        </TableRow>

    </TableLayout>
</LinearLayout>